{
  "name": "ayokoding-mono",
  "version": "0.1.0",
  "description": "monorepo for ayokoding",
  "main": "index.js",
  "repository": "git@github.com:wahidyankf/ayokoding.git",
  "private": true,
  "workspaces": [
    "packages/*",
    "scripts/*"
  ],
  "scripts": {
    "commit:auto": "git add --all && git commit -m \"update $(date +\"%D %T\")\" && git push origin master",
    "build:all": "npx oao run-script build --tree",
    "clean:build": "npx oao run-script clean:build --parallel", 
    "clean:packages": "npx oao run-script clean:packages --parallel", 
    "clean": "npx oao run-script clean --parallel",
    "init:repo": "yarn ; npx oao run-script build",
    "clean:init:repo": "yarn clean ; yarn init:repo",
    "patternmatch-web": "cd packages/patternmatch-web && yarn develop",
    "build:patternmatch-web": "cd packages/patternmatch-web && yarn build",
    "deploy:patternmatch-web": "cd packages/patternmatch-web ; yarn clean:build ; yarn build && yarn deploy",
    "deploy:patternmatch-web:auto": "yarn deploy:patternmatch-web && yarn commit:auto"
  },
  "author": "wahidyankf <wahidyankf@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "oao": "^1.6.0"
  }
}
