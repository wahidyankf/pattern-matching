{
  "name": "ayokoding-mono",
  "version": "0.1.0",
  "description": "monorepo for ayokoding",
  "main": "index.js",
  "repository": "git@github.com:wahidyankf/ayokoding.git",
  "scripts": {
    "commit:auto": "git add --all && git commit -m \"update $(date +\"%D %T\")\" && git push origin master",
    "init:patternmatch-web": "cd packages/patternmatch-web && yarn init:package",
    "init:codes": "cd packages/codes && yarn init:package",
    "init:top": "yarn install",
    "init:scripts": "cd scripts && yarn init:scripts",
    "init:repo": "yarn init:top && yarn init:scripts && yarn init:patternmatch-web && yarn init:codes",
    "clean:patternmatch-web": "cd packages/patternmatch-web && yarn clean:package",
    "clean:codes": "cd packages/codes && yarn clean:package",
    "clean:top": "rm -rf node_modules",
    "clean:scripts": "cd scripts && yarn clean:scripts",
    "clean:repo": "yarn clean:top && yarn clean:scripts && yarn clean:patternmatch-web && yarn clean:codes",
    "reset:patternmatch-web": "yarn clean:patternmatch-web && yarn init:patternmatch-web",
    "reset:codes": "yarn clean:codes && yarn init:codes",
    "reset:top": "yarn clean:top && yarn init:top",
    "reset:scripts": "cd scripts && yarn reset:scripts",
    "reset:repo": "yarn clean:repo && yarn init:repo",
    "dev:patternmatch-web": "cd packages/patternmatch-web && yarn dev",
    "build:patternmatch-web": "cd packages/patternmatch-web && yarn build",
    "build:all": "yarn build:patternmatch-web",
    "deploy:patternmatch-web": "cd packages/patternmatch-web && yarn deploy",
    "deploy:patternmatch-web:auto": "yarn deploy:patternmatch-web && yarn commit:auto",
    "deploy:all": "yarn deploy:patternmatch-web",
    "deploy:all:auto": "yarn deploy:patternmatch-web:auto"
  },
  "author": "wahidyankf <wahidyankf@gmail.com>",
  "license": "ISC"
}
